@page
@model GigHub.Pages.Gigs.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Add a Gig</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="GigViewModel.Venue"></label>
        <input asp-for="GigViewModel.Venue" class="form-control" />
        <span asp-validation-for="GigViewModel.Venue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GigViewModel.Date"></label>
        <input asp-for="GigViewModel.Date" class="form-control" />
        <span asp-validation-for="GigViewModel.Date" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="GigViewModel.Time"></label>
        <input asp-for="GigViewModel.Time" class="form-control" />
        <span asp-validation-for="GigViewModel.Time" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="GigViewModel.Genre"></label>
        <select asp-for="GigViewModel.Genre" asp-items='new SelectList(Model.GigViewModel.Genres, "Id", "Name")' class="form-control">
            <option selected value="">-- Please choose --</option>
        </select>
        <span asp-validation-for="GigViewModel.Genre" class="text-danger"></span>

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

